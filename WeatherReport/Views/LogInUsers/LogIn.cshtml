
@{
    ViewBag.Title = "Login";
}
<h2>Log In</h2>
<span style="color:red"> @ViewBag.Error</span>
@using (Html.BeginForm())
{
    <table style="width:50%">
        <tr style="height:40px">
            <td>Username</td>
            <td>@Html.TextBox("tbxUsername", null, new { @class = "form-control" })</td>
            <td>&nbsp</td>
        </tr>
        <tr style="height:40px">
            <td>Password</td>
            <td> @Html.Password("tbxPassword", null, new { @class = "form-control" }) </td>
            <td>&nbsp</td>
        </tr>
        <tr style="height:40px">
            <td>&nbsp</td>
            <td> <input id="btnSubmit" type="submit" value="Log In" class="btn btn-default" /> </td>
            <td>&nbsp</td>
        </tr>

    </table>
}

